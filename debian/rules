#!/usr/bin/make -f
# -*- makefile -*-

export DH_VERBOSE=1

ifneq (,$(filter parallel=%,$(DEB_BUILD_OPTIONS)))
NUMJOBS = $(patsubst parallel=%,%,$(filter parallel=%,$(DEB_BUILD_OPTIONS)))
BMAKEFLAGS += -j$(NUMJOBS)
endif

RTEMS_VER=4.9

powerpc_BSPS=mvme2100 mvme2307 mvme3100 mvme5500
i386_BSPS=pc386
m68k_BSPS=mvme162

# This has to be exported to make some magic below work.
export DH_OPTIONS

# These are used for cross-compiling and for saving the configure script
# from having to guess our platform (since we know it already)
DEB_HOST_GNU_TYPE   ?= $(shell dpkg-architecture -qDEB_HOST_GNU_TYPE)
DEB_BUILD_GNU_TYPE  ?= $(shell dpkg-architecture -qDEB_BUILD_GNU_TYPE)
CONFIG= --target=$(1)-rtems$(RTEMS_VER) --build=$(DEB_BUILD_GNU_TYPE) --host=$(DEB_HOST_GNU_TYPE) \
 --prefix=/usr --mandir=\$${prefix}/share/man --infodir=\$${prefix}/share/info \
 --enable-cxx --enable-rdbg --enable-rtemsbsp="$($(1)_BSPS)" \
 USE_COM1_AS_CONSOLE=1 BSP_PRESS_KEY_FOR_RESET=0

# USE_COM1_AS_CONSOLE - applies only to the pc386 BSP and controls the default for /dev/console
# BSP_PRESS_KEY_FOR_RESET - Is used by a number of BSP

#Do not touch CFLAGS use CFLAGS_FOR_HOST or CFLAGS_FOR_TARGET

%:
	dh $@

override_dh_auto_clean:
	rm -rf build-powerpc build-i386 build-m68k
	rm -f config.sub config.guess
	dh_auto_clean

override_dh_auto_configure:
	cp -f /usr/share/misc/config.sub config.sub
	cp -f /usr/share/misc/config.guess config.guess

	install -d build-powerpc
	install -d build-i386
	install -d build-m68k
	cd build-powerpc && ../configure $(call CONFIG,powerpc)
	cd build-i386 && ../configure $(call CONFIG,i386)
	cd build-m68k && ../configure $(call CONFIG,m68k)

override_dh_auto_build:
	# Note: CFLAGS et all must be explicitly unset to avoid
	#       clobbering the target CFLAGS
	env -u CFLAGS -u CXXFLAGS $(MAKE) $(BMAKEFLAGS) -C build-powerpc
	env -u CFLAGS -u CXXFLAGS $(MAKE) $(BMAKEFLAGS) -C build-i386
	env -u CFLAGS -u CXXFLAGS $(MAKE) $(BMAKEFLAGS) -C build-m68k

override_dh_auto_test:

override_dh_auto_install:
	# Write some info helpful to dependent packages
	install -d $(CURDIR)/debian/rtems-common/usr/share/rtems-common
	echo "$(RTEMS_VER)" > $(CURDIR)/debian/rtems-common/usr/share/rtems-common/series
	echo "i386 powerpc m68k" > $(CURDIR)/debian/rtems-common/usr/share/rtems-common/archs

	install -d $(CURDIR)/debian/rtems-i386/usr/share/rtems-i386
	echo "$(i386_BSPS)" > $(CURDIR)/debian/rtems-i386/usr/share/rtems-i386/bsps

	install -d $(CURDIR)/debian/rtems-powerpc/usr/share/rtems-powerpc
	echo "$(powerpc_BSPS)" > $(CURDIR)/debian/rtems-powerpc/usr/share/rtems-powerpc/bsps

	install -d $(CURDIR)/debian/rtems-m68k/usr/share/rtems-m68k
	echo "$(m68k_BSPS)" > $(CURDIR)/debian/rtems-m68k/usr/share/rtems-m68k/bsps

	# powerpc
	env -u CFLAGS -u CXXFLAGS $(MAKE) $(BMAKEFLAGS) -C build-powerpc DESTDIR=$(CURDIR)/debian/tmp install

	# i386
	env -u CFLAGS -u CXXFLAGS $(MAKE) $(BMAKEFLAGS) -C build-i386 DESTDIR=$(CURDIR)/debian/tmp install

	# m68k
	env -u CFLAGS -u CXXFLAGS $(MAKE) $(BMAKEFLAGS) -C build-m68k DESTDIR=$(CURDIR)/debian/tmp install

	mv debian/tmp/usr/bin/bin2boot debian/tmp/usr/bin/i386-rtems$(RTEMS_VER)-bin2boot

	rm -rf $(CURDIR)/debian/tmp/usr/share/man

override_dh_strip:
	dh_strip_rtems "$@"
	dh_strip --package=rtems-common

override_dh_shlibdeps:
	dh_shlibdeps "$@" -XRTEMS -Xrtems -Xdebug

override_dh_makeshlibs:
	dh_makeshlibs "$@" -XRTEMS -Xrtems -Xdebug
