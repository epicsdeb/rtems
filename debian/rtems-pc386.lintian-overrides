# RTEMS apps expect to find everything under /usr
# including /usr/make
rtems-pc386: non-standard-dir-in-usr
rtems-pc386: file-in-unusual-dir

# target binaries can be built/linked on any host
rtems-pc386: arch-independent-package-contains-binary-or-object

# retain debug symbols.  RTEMS build system automatically strips
# them after final link
rtems-pc386: unstripped-binary-or-object

# RTEMS does not support shared libraries
rtems-pc386: statically-linked-binary
